<div class="container">
<p>
  <strong>User:</strong>
  <%= link_to @tweet.user.email, user_path(@tweet.user.username) %>
</p>

<% if @tweet.image? %>
<%= image_tag  @tweet.image %>
<% end %>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>

<% if @tweet.user == current_user %>
<%= link_to 'Edit', edit_tweet_path(@tweet) %>
<% end %>
<%= link_to 'Back', tweets_path %>
</div>